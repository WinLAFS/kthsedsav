<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

<!-- Buffer events and log them asynchronously -->
<appender name="myAsyncAppender" class="org.apache.log4j.AsyncAppender">
	<param name="blocking" value="false"/>
	<appender-ref ref="myFileAppender"/>
</appender> 


    <appender name="myFileAppender"
        class="org.apache.log4j.FileAppender">
	<param name="File" value="${niche.log.file}"/>
	<param name="Append" value="false"/>
	<layout class="org.apache.log4j.PatternLayout">
	<param name="ConversionPattern" value="%6r %-5p |%-16t| %-35c{1}| %m%n"/>
	</layout>
    </appender>

    <root>
        <priority value="debug" />
        <appender-ref ref="myAsyncAppender"/>
    </root>

</log4j:configuration>
